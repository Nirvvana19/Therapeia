<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".onboardign.SplashFragment"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/tv_splash"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="324dp"
        android:fontFamily="@font/nexa"
        android:gravity="center"
        android:text="Tu bienestar, nuestra prioridad: ¡No te pierdas ni una dosis más!"
        android:textColor="@color/p3"
        android:textFontWeight="1000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="379dp"
        android:layout_height="391dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_ri"
        android:layout_width="546dp"
        android:layout_height="622dp"
        android:layout_marginTop="500dp"
        android:src="@drawable/de2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-56dp" />

    <ImageView
        android:id="@+id/im_iz"
        android:layout_width="487dp"
        android:layout_height="622dp"
        android:layout_marginBottom="500dp"
        android:src="@drawable/de2"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-56dp" />

</androidx.constraintlayout.widget.ConstraintLayout>